{
  "name": "@dwidge/trace-js",
  "version": "0.0.1",
  "description": "Add context to exceptions thrown by JS functions.",
  "repository": "github:dwidge/trace-js",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "rimraf dist && ncp assets/ dist/ && tsc -b tsconfig*",
    "dev": "tsc -w",
    "test": "node --test"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/node": "^22.5.4",
    "expect": "^29.7.0",
    "ncp": "^2.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=20"
  }
